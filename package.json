{
  "name": "mrroot-app",
  "version": "1.0.0",
  "description": "A simple Electron desktop app",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npx electron-builder --dir",
    "dist": "npx electron-builder",
    "clean": "rm -rf dist build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustablockCode/MrRoot.git"
  },
  "keywords": [],
  "author": {
    "name": "Justablock",
    "email": "bdfd000@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JustablockCode/MrRoot/issues"
  },
  "homepage": "https://github.com/JustablockCode/MrRoot#readme",
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.justablock.mrroot",
    "productName": "MrRoot",
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": ["deb", "AppImage", "rpm"],
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }

}